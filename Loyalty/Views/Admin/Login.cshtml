<div id="particles-js"></div>
<body class="login">
  <div class="container">
    <div class="login-container-wrapper clearfix">
      <div class="logo">
        <i class="fa fa-sign-in"></i>
      </div>
      <div class="welcome"><strong>Loyalty Program</strong></div>
      <form class="form-horizontal login-form">
        <div class="form-group relative">
          <input id="login_username" class="form-control input-lg" type="email" placeholder="Email" required>
        </div>
        <div class="form-group relative password">
          <input id="login_password" class="form-control input-lg" type="password" placeholder="Password" required>
        </div>
        <div class="checkbox pull-right">
          <label> <a class="forget" href="" title="forget">Forgot password?</a> </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="float: right;">Login <i class="fas fa-sign-in-alt"></i></button>
          </div>
      </form>
    </div>
  </div>
  </body>
</html>
